{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "./dist",
    "baseUrl": "./src",
    "types": [
      "reflect-metadata"
    ],
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts",
    "test/unit/**/*.spec.ts",
    "test/integration/**/*.spec.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "test/test-output",
    "test/resources"
  ]
}